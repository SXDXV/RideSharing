<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RideSharing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_semi_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/main_semi_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="systemButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/style_rounded_button</item>
    </style>

    <style name="systemButtonStyleOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/style_rounded_button</item>
    </style>

    <!-- Text styles -->
    <style name="textHeader">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/proximanova_black</item>
        <item name="android:textColor">@color/light_dark</item>
    </style>

    <style name="textFields">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/proximanova_bold</item>
        <item name="android:textColor">@color/light_dark</item>
    </style>

    <style name="textRegular">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/proximanova_bold</item>
        <item name="android:textColor">@color/light_dark</item>
    </style>

    <style name="buttonFillShape" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:background">@drawable/roundedbutton</item>
    </style>

    <style name="buttonOutShape" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/roundedbutton</item>
    </style>

    <style name="textRegularBtnFill" parent = "buttonFillShape">
        <item name="android:textSize">15sp</item>
        <item name="android:elevation">50dp</item>
        <item name="fontFamily">@font/proximanova_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textRegularBtnOutlined" parent = "buttonOutShape">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/proximanova_bold</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>